<%= form_for(@variable) do |f| %>
  <% if @variable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@variable.errors.count, "error") %> ошибок препятствуют сохранению:</h2>

      <ul>
      <% @variable.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :value, 'Курс' %><br>
    <%= f.number_field :value %>
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-default' %>
  </div>
<% end %>
