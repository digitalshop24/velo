<p id="notice"><%= notice %></p>

<p>
  <strong>Имя:</strong>
  <%= @review.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @review.email %>
</p>

<p>
  <strong>Оценка:</strong>
  <%= @review.mark %>
</p>

<p>
  <strong>Текст отзыва:</strong>
  <%= @review.content %>
</p>

<p>
  <strong>Дата отзыва:</strong>
  <%= @review.date.strftime("%d.%m.%Y") %>
</p>

<p>
  <strong>Товар:</strong>
  <%= link_to "#{@review.reviewable.manufacturer.name} #{@review.reviewable.name}", "/admin/#{@review.reviewable_type.downcase.pluralize}/#{@review.reviewable_id}" %>
</p>

<p>
  <strong>Одобрен:</strong>
  <span class="glyphicon <%= @review.approved ? 'glyphicon-ok' : 'glyphicon-remove' %>" aria-hidden="true"></span>
</p>


<%= link_to 'Редактировать', edit_review_path(@review) %>
