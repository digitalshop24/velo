<p id="notice"><%= notice %></p>

<h1>Все отзывы</h1>

<table class="table">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Email</th>
      <th>Оценка</th>
      <th>Одобрен</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= review.email %></td>
        <td><%= review.mark %></td>
        <td><span class="glyphicon <%= review.approved ? 'glyphicon-ok' : 'glyphicon-remove' %>" aria-hidden="true"></span></td>
        <td><%= link_to 'Открыть', review, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Редактировать', edit_review_path(review), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Удалить', review, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-default btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый отзыв', new_review_path %>

<%= will_paginate @reviews %>
