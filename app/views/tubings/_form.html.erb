<%= form_for(@tubing, :html => { :multipart => true }) do |f| %>
  <% if @tubing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tubing.errors.count, "error") %> prohibited this tubing from being saved:</h2>
      <ul>
        <% @tubing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :manufacturer %><br>
    <%= f.collection_select :manufacturer_id, Manufacturer.where(category: 'tubing'), :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, step: 'any' %>
  </div>
  <div class="field">
    <%= f.label :bottom_material %><br>
    <%= f.text_field :bottom_material %>
  </div>
  <div class="field">
    <%= f.label :top_material %><br>
    <%= f.text_field :top_material %>
  </div>
  <div class="field">
    <%= f.label :diameter %><br>
    <%= f.number_field :diameter %>
  </div>
  <div class="field">
    <%= f.label :handles_type %><br>
    <%= f.text_field :handles_type %>
  </div>
  <div class="field">
    <%= f.label :tow_rope %><br>
    <%= f.check_box :tow_rope %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :display %><br>
    <%= f.check_box :display %>
  </div>
  <div class="field">
    <%= f.label :hit %><br>
    <%= f.check_box :hit %>
  </div>
  <div>
    <% @product = @tubing %>
    <%= render 'layouts/gallery_edit' %>
  </div>
  <%= f.fields_for :gallery do |g| %>
    <div class="control-group">
      <%= file_field_tag "images[]", type: :file, multiple: true, accept: 'image/png,image/gif,image/jpeg' %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit 'Сохранить', class: "btn btn-primary" %>
  </div>
<% end %>
