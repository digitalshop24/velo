<p id="notice"><%= notice %></p>

<h1>Все категории спорттоваров</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Название категории</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sportgoods_categories.each do |sportgoods_category| %>
      <tr>
        <td><%= sportgoods_category.name %></td>
        <td><%= link_to 'Редактировать', edit_sportgoods_category_path(sportgoods_category) %></td>
        <td><%= link_to 'Удалить', sportgoods_category, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая категория', new_sportgoods_category_path %>
