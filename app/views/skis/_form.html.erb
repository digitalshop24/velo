<%= form_for(@ski, :html => { :multipart => true }) do |f| %>
  <% if @ski.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ski.errors.count, "error") %> prohibited this ski from being saved:</h2>
      <ul>
        <% @ski.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :manufacturer %><br>
    <%= f.collection_select :manufacturer_id, Manufacturer.where(category: 'ski'), :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :poles %><br>
    <%= f.check_box :poles %>
  </div>
  <div class="field">
    <%= f.label :grid %><br>
    <%= f.check_box :grid %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.number_field :size %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :display %><br>
    <%= f.check_box :display %>
  </div>
  <div>
    <% @product = @ski %>
    <%= render 'layouts/gallery_edit' %>
  </div>
  <div class="field">
      <%= f.label :hit %><br>
      <%= f.check_box :hit %>
  </div>
  <%= f.fields_for :gallery do |g| %>
    <div class="control-group">
      <%= file_field_tag "images[]", type: :file, multiple: true, accept: 'image/png,image/gif,image/jpeg' %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
