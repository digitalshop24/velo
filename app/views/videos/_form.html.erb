<%= form_for(@video) do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>
      <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-md-5">
      <%= f.label :link %>
      <%= f.text_field :link, class: 'form-control', placeholder: 'https://youtu.be/Im69kzhpR3I' %>
      <p class="help-block">Ссылка вида: https://youtu.be/Im69kzhpR3I</p>
      <p id="video_preview"><%= @video.embed.html_safe if @video.link && !@video.link.empty? %></p>
    </div>
  </div>
  <%= f.submit  class: 'btn btn-primary' %>
<% end %>
